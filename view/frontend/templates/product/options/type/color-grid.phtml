<?php
/**
 * ElielWeb ProductConfigurator - Compact Color Grid
 * Displays thread colors as a grid (no modal)
 *
 * @var $block \Magento\Framework\View\Element\Template
 * @var \Magento\Catalog\Model\Product\Option $option
 * @var \ElielWeb\ProductConfigurator\ViewModel\ProductOptions $optionsViewModel
 */

$option = $block->getData('option');
$product = $block->getData('product');
$optionsViewModel = $block->getData('options_view_model');

$optionId = $option->getOptionId();
$colorsData = $optionsViewModel->getWireColorsWithHex($option);
?>

<!-- Hidden input to store selected value -->
<input type="hidden"
       name="options[<?= $escaper->escapeHtmlAttr($optionId) ?>]"
       <?= $option->getIsRequire() ? 'required' : '' ?>>

<div class="color-grid-compact">
    <?php foreach ($colorsData as $color): ?>
        <button type="button"
                class="color-grid-item"
                @click="selectOption(<?= (int)$optionId ?>, '<?= $escaper->escapeJs($color['id']) ?>', <?= (float)$color['price'] ?>); open = false"
                :class="{ 'selected': selectedOptions[<?= (int)$optionId ?>]?.valueId == '<?= $escaper->escapeJs($color['id']) ?>' }"
                title="<?= $escaper->escapeHtmlAttr($color['name']) ?>">

            <span class="color-ring" style="--ring-color: <?= $escaper->escapeHtmlAttr($color['hex']) ?>;"></span>
            <span class="color-name"><?= $escaper->escapeHtml($color['name']) ?></span>

            <?php if ($color['price'] != 0): ?>
                <span class="color-price">
                    <?php if ($color['price_type'] === 'percent'): ?>
                        <?= $color['price'] > 0 ? '+' : '' ?><?= $escaper->escapeHtml($color['price']) ?>%
                    <?php else: ?>
                        <?= $color['price'] > 0 ? '+' : '' ?><?= $escaper->escapeHtml($block->formatPrice($color['price'])) ?>
                    <?php endif; ?>
                </span>
            <?php endif; ?>
        </button>
    <?php endforeach; ?>
</div>

