<?php
/**
 * ElielWeb OptionsProduct - Modern Color Swatch Template
 * Thread colors as visual ring swatches in a modal
 *
 * @var $block \Magento\Framework\View\Element\Template
 * @var \Magento\Catalog\Model\Product\Option $option
 * @var \ElielWeb\ProductConfigurator\ViewModel\ProductOptions $optionsViewModel
 */

$option = $block->getData('option');
$product = $block->getData('product');
$optionsViewModel = $block->getData('options_view_model');

$optionId = $option->getOptionId();
$colorsData = $optionsViewModel->getWireColorsWithHex($option);

// Limit preview colors to first 5
$previewColors = array_slice($colorsData, 0, 5);
$remainingCount = count($colorsData) - 5;
?>

<!-- Load Alpine.js if not already loaded -->
<script>
if (typeof Alpine === 'undefined') {
    var alpineScript = document.createElement('script');
    alpineScript.src = 'https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js';
    alpineScript.defer = true;
    document.head.appendChild(alpineScript);
}
</script>

<div class="thread-color-selector-modern"
     x-data="{
         selectedColor: null,
         selectedColorName: '',
         selectedColorHex: '',
         isModalOpen: false,
         selectColor(id, name, hex, price) {
             this.selectedColor = id;
             this.selectedColorName = name;
             this.selectedColorHex = hex;
             this.isModalOpen = false;
             document.querySelector('input[name=\'options[<?= (int)$optionId ?>]\']').value = id;
             this.$dispatch('option-selected', {
                 optionId: <?= (int)$optionId ?>,
                 valueId: id,
                 price: price
             });
         }
     }">

    <!-- Hidden input -->
    <input type="hidden"
           name="options[<?= $escaper->escapeHtmlAttr($optionId) ?>]"
           x-model="selectedColor"
           <?= $option->getIsRequire() ? 'required' : '' ?>>

    <!-- Preview Row with mini rings - clickable -->
    <div class="color-preview-row">
        <?php foreach ($previewColors as $color): ?>
            <div class="mini-ring-preview"
                 style="--ring-color: <?= $escaper->escapeHtmlAttr($color['hex']) ?>;"
                 title="<?= $escaper->escapeHtmlAttr($color['name']) ?>"
                 @click="selectColor('<?= $escaper->escapeJs($color['id']) ?>', '<?= $escaper->escapeJs($color['name']) ?>', '<?= $escaper->escapeJs($color['hex']) ?>', <?= (float)$color['price'] ?>)"
                 :class="{ 'active': selectedColor === '<?= $escaper->escapeJs($color['id']) ?>' }">
            </div>
        <?php endforeach; ?>

        <?php if ($remainingCount > 0): ?>
            <button type="button" class="more-colors-btn" @click="isModalOpen = true">
                +<?= $remainingCount ?>
            </button>
        <?php endif; ?>
    </div>

    <!-- Selected display -->
    <div class="selected-display" x-show="selectedColor" x-cloak>
        <span class="selected-ring" :style="'--ring-color: ' + selectedColorHex"></span>
        <span class="selected-name" x-text="selectedColorName"></span>
    </div>

    <!-- Modal Overlay -->
    <div class="color-modal-overlay"
         x-show="isModalOpen"
         x-transition.opacity
         @click="isModalOpen = false"
         style="display: none;">
    </div>

    <!-- Modal Content -->
    <div class="color-modal-modern"
         x-show="isModalOpen"
         x-transition
         @click.away="isModalOpen = false"
         style="display: none;">

        <div class="modal-header">
            <h3><?= $escaper->escapeHtml(__('Choose your thread color')) ?></h3>
            <button type="button" class="modal-close" @click="isModalOpen = false">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>

        <div class="color-cards-grid">
            <?php foreach ($colorsData as $color): ?>
                <div class="color-card"
                     @click="selectColor('<?= $escaper->escapeJs($color['id']) ?>', '<?= $escaper->escapeJs($color['name']) ?>', '<?= $escaper->escapeJs($color['hex']) ?>', <?= (float)$color['price'] ?>)"
                     :class="{ 'selected': selectedColor === '<?= $escaper->escapeJs($color['id']) ?>' }">

                    <div class="ring-swatch" style="--ring-color: <?= $escaper->escapeHtmlAttr($color['hex']) ?>;"></div>
                    <span class="color-name"><?= $escaper->escapeHtml($color['name']) ?></span>
                </div>
            <?php endforeach; ?>
        </div>
    </div>
</div>

